<% if @shift != nil %>
    <div class = "container px-5 px-sm-0 mt-3">
      <div class = "row mt-5">
        <div class = "col text-center">
          <h2><%= @shift.shop.shop_name %><%= @shift.year_month %>月度シフト</h2>
          <%= attachment_image_tag @shift, :image, format:'jpg', fallback:"no_image.jpg", class:"mt-5 w-100" %>
        </div>
      </div>
    </div>
<% else %>
  <div class = "container px-5 px-sm-0 mt-3">
    <div class = "row">
      <div class = "col text-center">
        <%= image_tag 'sorry.png',size:'500x320' %>
      </div>
  </div>
<% end %>