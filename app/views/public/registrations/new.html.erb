<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="col-6 offset-3">
        <h2><strong>新規登録</strong></h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        
          <div class="field my-3">
            <%= f.label :"社員ID" %><br />
            <%= f.text_field :employee_id, autofocus: true, autocomplete: "employee_id",class: "form-control" %>
          </div>
        
          <div class="field my-3">
            <%= f.label :"パスワード(6文字以上)" %>
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
          </div>
        
          <div class="field my-3">
            <%= f.label :"パスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
          </div>
        
          <div class="actions my-4 text-center">
            <%= f.submit "登録" %>
          </div>
        <% end %>
     </div>
    </div>
  </div>
</div>