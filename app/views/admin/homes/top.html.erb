<div class="row">
  <div class="col-lg-10 mt-5 mx-auto">
    <table class="table mt-5 h-75">
      <thead class="bg-success text-center">
        <tr>
          <th scope="col">店舗一覧</th>
          <th scope="col">今月のシフト</th>
          <th scope="col">  休み希望 </th>
          <th scope="col">来月のシフト</th>
        </tr>
      </thead>
      <tbody class="text-center">
        <% @shops.each do |shop| %>
        <tr>
          <th scope="row"><%= shop.shop_name %></td>
          <td><%= link_to "確認", admin_shift_path(shop.id,{year_month: Time.current.strftime("%Y-%m")}) %></td>
          <td><%= link_to "確認", admin_submit_off_path(shop.id) %></td>
          <td><%= link_to "確認", admin_shift_path(shop.id,{year_month: Time.current.next_month.strftime("%Y-%m")}) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>