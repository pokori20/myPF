<h2>シフト一覧</h2>
  <div class="search_form mx-auto mt-3">
    <%= form_with url: search_path, method: :get, local:true do |f| %>
    <%= f.text_field :content %>
    <!--f.select~でプルダウン作成-->
    <%= f.collection_select :shop_id, Shop.all, :id, :shop_name %>
    <%= f.collection_select :year_month, %>
    <%= f.submit'検索' %>
    <% end %>
  </div>
<table>
  <thead>
    <tr>
      <th>作成日</th><th>店舗名</th>
    </tr>
  </thead>
  <tbody>
    <% @shifts.each do |shift| %>
    <tr>
      <td><%= shift.year_month %></td>
      <td><%= link_to shift.shop.shop_name, admin_shift_path %></td>
    </tr>
    <% end %>
  </tbody>
</table>