<div class ="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-5 mx-auto">
    <h2 class="text-center"><strong>シフト投稿</strong></h2>
    <%= form_with model: @shift, url: new_admin_shift_path, local:true do |f| %>
      <div class = "form-group text-center">
        <%= f.label :"年月" %>
        <%= f.date_select :year_month,use_month_numbers: true, start_year:Time.now.year, end_year:Time.now.year+10, discard_day:true %>
        <%= f.submit '変更を保存' %>
      </div>
    <% end %>
  </div>
</div>